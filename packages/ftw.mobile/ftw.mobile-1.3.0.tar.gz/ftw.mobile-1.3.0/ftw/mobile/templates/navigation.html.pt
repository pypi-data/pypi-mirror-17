<div i18n:domain="ftw.mobile" tal:omit-tag="python:True">

<script id="ftw-mobile-navigation-template" type="text/x-handlebars-template">

    <div class="mobile-menu mobile-menu-{{name}}">

        <ul class="topLevelTabs">
            {{#each toplevel}}

                <li class="{{cssclass}}"><a href="{{url}}">{{title}}</a></li>

             {{/each}}

        </ul>

        <div class="tabPanes">
            <div class="tabPane">
                <ul>
                  {{#if parentNode}}

                  <li class="navParentNode">
                      <a href="{{parentNode.url}}" class="mobileActionNav up">
                          <span i18n:translate="label_goto_parent">Nächst höherer Inhalt {{parentNode.title}} anzeigen.</span>
                      </a>

                      <a href="{{currentNode.url}}">{{currentNode.title}}</a>
                  </li>

                  {{/if}}

                  {{> list}}
                </ul>
            </div>
        </div>

    </div>
</script>


<script id="ftw-mobile-navigation-list-template" type="text/x-handlebars-template">
     {{#each nodes}}
        <li>

            <a href="{{url}}">{{title}}</a>

            <a href="{{url}}" class="mobileActionNav down" i18n:translate="label_goto_children">
                <span>Unterhinhalte von: {{title}} anzeigen</span>
            </a>

            {{#if nodes}}
                <ul>
                    {{> list}}
                </ul>
            {{/if}}
        </li>
    {{/each}}
</script>

</div>
