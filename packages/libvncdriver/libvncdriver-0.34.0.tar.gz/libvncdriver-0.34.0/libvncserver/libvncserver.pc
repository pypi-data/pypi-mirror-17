prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: LibVNCServer
Description: A library for easy implementation of a VNC server.
Version: 0.9.10
Requires:
Requires.private: zlib
Libs: -L${libdir} -lvncserver
Libs.private: -lpthread -lz -lpng -ljpeg -L/usr/local/opt/libgcrypt/lib -lgcrypt -L/usr/local/opt/libgpg-error/lib -lgpg-error  
Cflags: -I${includedir}

