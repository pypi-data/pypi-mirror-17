{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Alerts",
    "type": "object",
    "properties": {
        "subjectId": {
            "type": "string",
            "format": "mongoId"
        },
        "subjectType": {
            "type": "string",
            "enum": ["device", "service"]
        },
        "subject": {
            "type": ["string", "null"]
        },
        "enabled": {
            "type": "boolean"
        },
        "section": {
            "type": "string"
        },
        "field": {
            "type": "string"
        },
        "comparison": {
            "type": "string",
            "enum": ["lt", "gt", "lte", "gte", "eq", "neq", "c", "nc", "re", "nre"]
        },
        "value": {
            "type": "string"
        },
        "fix": {
            "type": "boolean"
        },
        "group": {
            "type": "string"
        },
        "recipients": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["user", "pagerduty", "webhook"]
                    },
                    "id": {
                        "type": "string",
                        "format": "mongoId"
                    },
                    "actions": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "pagerduty",
                                "webhook",
                                "slack",
                                "hipchat",
                                "sms",
                                "email"
                            ]
                        }
                    }
                },
                "required": ["type", "id"]
            }
        },
        "wait": {
            "type": "object",
            "properties": {
                "seconds": {
                    "type": "number"
                },
                "enabled": {
                    "type": "boolean"
                },
                "displayUnits": {
                    "type": "string",
                    "enum": ["s"]
                }
            },
            "required": ["seconds", "enabled", "displayUnits"]
        },
        "repeat": {
            "type": "object",
            "properties": {
                "seconds": {
                    "type": "number"
                },
                "enabled": {
                    "type": "boolean"
                },
                "displayUnits": {
                    "type": "string",
                    "enum": ["s"]
                }
            },
            "required": ["seconds", "enabled", "displayUnits"]
        }
    },
    "required": [
        "subjectId",
        "subjectType",
        "subject",
        "enabled",
        "section",
        "field",
        "comparison",
        "value",
        "recipients",
        "wait",
        "repeat",
        "fix"
    ]
}
