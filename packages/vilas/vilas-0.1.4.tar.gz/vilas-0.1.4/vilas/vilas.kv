#:kivy 1.9.0
#:import sys sys
#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter
#:import os os
            



#---------------------------------------------------#
# Dialog
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: os.getcwd()
            multiselect: True

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
