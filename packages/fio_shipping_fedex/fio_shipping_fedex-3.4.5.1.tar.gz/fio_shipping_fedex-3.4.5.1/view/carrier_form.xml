<data>
    <xpath expr="/form/field[@name='carrier_cost_method']" position="after">
        <newline/>
        <group string="FedEx Configuration" states="{'invisible': Eval('carrier_cost_method') != 'fedex'}" id="fedex_configuration" colspan="4">
            <label name="fedex_key"/>
            <field name="fedex_key"/>
            <label name="fedex_password"/>
            <field name="fedex_password" widget="password"/>
            <label name="fedex_account_number"/>
            <field name="fedex_account_number"/>
            <label name="fedex_meter_number"/>
            <field name="fedex_meter_number"/>
            <label name="fedex_is_test"/>
            <field name="fedex_is_test"/>
        </group>
    </xpath>
</data>
